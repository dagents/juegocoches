generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Profile {
  id          String   @id @db.Uuid
  email       String   @unique
  displayName String?  @map("display_name")
  avatarUrl   String?  @map("avatar_url")
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  ideas         Idea[]
  votes         Vote[]
  gameProposals GameProposal[]
  gameVotes     GameVote[]
  gameSave      GameSave?

  @@map("profiles")
}

model Idea {
  id              String       @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String       @map("user_id") @db.Uuid
  content         String       @db.VarChar(500)
  approved        Boolean?
  rejectionReason String?      @map("rejection_reason") @db.VarChar(500)
  category        String?      @db.VarChar(50)
  votesCount      Int          @default(0) @map("votes_count")
  dayDate         DateTime     @map("day_date") @db.Date
  createdAt       DateTime     @default(now()) @map("created_at")

  user        Profile      @relation(fields: [userId], references: [id], onDelete: Cascade)
  votes       Vote[]
  dailyWinner DailyWinner?

  @@unique([userId, dayDate], name: "one_idea_per_user_per_day")
  @@index([dayDate, approved])
  @@index([dayDate, votesCount(sort: Desc)])
  @@map("ideas")
}

model Vote {
  id        String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId    String   @map("user_id") @db.Uuid
  ideaId    String   @map("idea_id") @db.Uuid
  dayDate   DateTime @map("day_date") @db.Date
  createdAt DateTime @default(now()) @map("created_at")

  user Profile @relation(fields: [userId], references: [id], onDelete: Cascade)
  idea Idea    @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@unique([userId, dayDate], name: "one_vote_per_user_per_day")
  @@index([ideaId])
  @@map("votes")
}

model DailyWinner {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  ideaId      String   @unique @map("idea_id") @db.Uuid
  dayDate     DateTime @unique @map("day_date") @db.Date
  implemented Boolean  @default(false)
  createdAt   DateTime @default(now()) @map("created_at")

  idea Idea @relation(fields: [ideaId], references: [id], onDelete: Cascade)

  @@map("daily_winners")
}

model GameProposal {
  id              String    @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId          String    @map("user_id") @db.Uuid
  title           String    @db.VarChar(100)
  description     String    @db.VarChar(500)
  approved        Boolean?
  rejectionReason String?   @map("rejection_reason") @db.VarChar(500)
  category        String?   @db.VarChar(50)
  votesCount      Int       @default(0) @map("votes_count")
  proposalDate    DateTime  @map("proposal_date") @db.Date
  createdAt       DateTime  @default(now()) @map("created_at")

  user        Profile       @relation(fields: [userId], references: [id], onDelete: Cascade)
  gameVotes   GameVote[]
  winningGame WinningGame?

  @@unique([userId, proposalDate], name: "one_game_proposal_per_user_per_day")
  @@index([proposalDate, approved])
  @@index([proposalDate, votesCount(sort: Desc)])
  @@map("game_proposals")
}

model GameVote {
  id           String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId       String   @map("user_id") @db.Uuid
  proposalId   String   @map("proposal_id") @db.Uuid
  proposalDate DateTime @map("proposal_date") @db.Date
  createdAt    DateTime @default(now()) @map("created_at")

  user     Profile      @relation(fields: [userId], references: [id], onDelete: Cascade)
  proposal GameProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  @@unique([userId, proposalDate], name: "one_game_vote_per_user_per_day")
  @@index([proposalId])
  @@map("game_votes")
}

model WinningGame {
  id         String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  proposalId String   @unique @map("proposal_id") @db.Uuid
  createdAt  DateTime @default(now()) @map("created_at")

  proposal GameProposal @relation(fields: [proposalId], references: [id], onDelete: Cascade)

  @@map("winning_game")
}

model GameSave {
  id          String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  userId      String   @unique @map("user_id") @db.Uuid
  gameState   Json     @map("game_state")
  currentAge  Int      @map("current_age")
  currentMonth Int     @map("current_month")
  isAlive     Boolean  @default(true) @map("is_alive")
  score       Int      @default(0)
  biography   String?  @db.Text
  countryCode String   @map("country_code") @db.VarChar(3)
  createdAt   DateTime @default(now()) @map("created_at")
  updatedAt   DateTime @updatedAt @map("updated_at")

  user Profile @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("game_saves")
}

model GameVersion {
  id            String   @id @default(dbgenerated("gen_random_uuid()")) @db.Uuid
  versionNumber String   @map("version_number") @db.VarChar(20)
  title         String   @db.VarChar(200)
  description   String   @db.Text
  proposedBy    String?  @map("proposed_by") @db.Uuid
  votesReceived Int      @default(0) @map("votes_received")
  createdAt     DateTime @default(now()) @map("created_at")

  @@map("game_versions")
}
