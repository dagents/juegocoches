# ===========================================
# JuegoCoches - Environment Variables
# ===========================================
# Copy this file as .env and fill in the values.
# NEVER commit the .env file with real credentials.

# --- Database (Supabase PostgreSQL) ---
# Connection pooling URL (PgBouncer) - for general use
DATABASE_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres?pgbouncer=true
# Direct connection URL (no pooling) - for Prisma migrations
DIRECT_URL=postgresql://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:5432/postgres

# --- Supabase ---
# Public project URL (safe for client-side)
NEXT_PUBLIC_SUPABASE_URL=https://[project-ref].supabase.co
# Anon key - safe to expose to client (RLS enforces permissions)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJ...
# Service role key - server-side ONLY, bypasses RLS. NEVER expose to client.
SUPABASE_SERVICE_ROLE_KEY=eyJ...

# --- AI Moderation (OpenRouter) ---
# OpenRouter API key (https://openrouter.ai)
OPENROUTER_API_KEY=sk-or-v1-your-key-here
# Model for moderation (default: qwen/qwen3-235b-a22b-instruct-2507)
OPENROUTER_MODEL=qwen/qwen3-235b-a22b-instruct-2507

# --- Application ---
# Public app URL (no trailing slash)
NEXT_PUBLIC_APP_URL=http://localhost:3000
